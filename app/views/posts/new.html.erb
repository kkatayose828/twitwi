<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿</h1>
    <%= form_tag("/posts/create") do %>
      <div class="form">
        <div class="form-body">
          <p>タイトル:<br><input type="text" name="title"></p>
          <textarea name="content" cols=40 rows=4 maxlength=1000 wrap=hard></textarea>
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>
  </div>
</div>
